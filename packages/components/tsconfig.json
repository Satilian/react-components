{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "es7",
      "dom",
      "ESNext"
    ],
    "target": "es6",
    "baseUrl": "src",
    "module": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
